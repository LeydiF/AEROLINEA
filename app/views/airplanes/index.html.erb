<p id="notice"><%= notice %></p>

<h1>Listing Airplanes</h1>

<table>
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Piloto</th>
      <th>Vuelo</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.empresa %></td>
        <td><%= airplane.piloto %></td>
        <td><%= airplane.vuelo %></td>
        <td><%= airplane.numero %></td>
        <td><%= link_to 'Show', airplane %></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

